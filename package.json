{
  "name": "modern-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "npm run clean && next dev",
    "build": "npm run validate-content && next build",
    "build:clean": "npm run clean && npm run build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate-content": "tsx scripts/validate-content.ts",
    "clean": "rimraf .next && rimraf node_modules/.cache",
    "clean:all": "rimraf .next && rimraf node_modules/.cache && rimraf node_modules && npm install",
    "reset": "npm run clean:all && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "perf-test": "node scripts/performance-test.js",
    "test:seo": "node scripts/test-seo.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/components tests/lib",
    "test:integration": "vitest run tests/integration",
    "test:accessibility": "vitest run tests/accessibility",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:performance": "playwright test tests/performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:accessibility && npm run test:e2e",
    "lighthouse": "lhci autorun",
    "prepare": "husky install"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.541.0",
    "next": "^15.0.0",
    "next-intl": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "husky": "^8.0.0",
    "jest": "^30.0.5",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.4",
    "typescript": "~5.3.0",
    "vitest": "^3.2.4"
  }
}
